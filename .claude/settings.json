{
  "model": "sonnet",
  "env": {
    "NEXT_TELEMETRY_DISABLED": "1"
  },
  "permissions": {
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./config/credentials.json)",
      "Read(~/.ssh/**)",
      "Read(~/.aws/**)",
      "Bash(curl *)",
      "Bash(wget *)"
    ],
    "ask": [
      "Bash(git push *)",
      "Bash(vercel *)",
      "Bash(supabase *)",
      "Bash(npm install *)",
      "Bash(pnpm add *)",
      "Bash(pnpm remove *)",
      "Bash(yarn add *)",
      "Bash(bun add *)"
    ],
    "allow": [
      "Read",
      "Grep",
      "Glob",
      "Edit",
      "Write",
      "Bash(git status*)",
      "Bash(git diff*)",
      "Bash(git log*)",
      "Bash(git show*)",
      "Bash(git checkout*)",
      "Bash(git switch*)",
      "Bash(git add*)",
      "Bash(git commit*)",
      "Bash(node *)",
      "Bash(./scripts/*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/format-after-edit.mjs",
            "timeout": 20
          }
        ]
      }
    ]
  }
}
